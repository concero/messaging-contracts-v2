{
    "arrowParens": "avoid",
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
        {
            "files": ["**/*.ts"],
            "options": {
                "parser": "typescript",
                "arrowParens": "avoid",
                "printWidth": 100,
                "tabWidth": 4,
                "trailingComma": "all",
                "singleQuote": false,
                "bracketSpacing": true,
                "semi": true,
                "useTabs": true
            }
        },
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "printWidth": 100,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false
            }
        },
        {
            "files": "./clf/src/**",
            "options": {
                "tabWidth": 4,
                "arrowParens": "avoid",
                "printWidth": 120,
                "trailingComma": "all",
                "singleQuote": false,
                "bracketSpacing": true,
                "semi": true
            }
        }
    ]
}
