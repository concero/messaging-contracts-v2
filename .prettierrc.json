{
    "arrowParens": "avoid",
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "plugins": ["prettier-plugin-solidity", "@trivago/prettier-plugin-sort-imports"],
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript",
                "printWidth": 120,
                "tabWidth": 4,
                "trailingComma": "all",
                "singleQuote": true,
                "bracketSpacing": false,
                "semi": true,
                "useTabs": false,
                "importOrderSeparation": true,
                "importOrderSortSpecifiers": true,
                "importOrder": ["./utils/configureOperatorEnv", "^@concero/(.*)$", "^contracts/(.*)$", "^utils/(.*)$", "^[./]"]
            }
        },
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "printWidth": 100,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false
            }
        },
        {
            "files": "./clf/src/*",
            "options": {
                "arrowParens": "avoid",
                "printWidth": 120,
                "tabWidth": 1,
                "trailingComma": "all",
                "singleQuote": true,
                "bracketSpacing": false,
                "semi": true,
                "useTabs": true
            }
        }
    ]
}
